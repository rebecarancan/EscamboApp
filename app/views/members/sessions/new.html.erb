<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title"><%= t('labels.enter') %></div>
                <div style="float:right; font-size: 80%; position: relative; top:-10px">
                  <%= link_to "#{t('labels.forgot_password')}",new_member_password_path %>
                </div>
            </div>

            <div style="padding-top:30px" class="panel-body" >

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"form-horizontal", role:"form"}) do |f| %>

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>

                    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"#{t('placeholder.email')}" %>
                  </div>

                  <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>

                    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"#{t('placeholder.password')}" %>
                  </div>

                  <div class="input-group">
                    <div class="checkbox">
                      <label>
                        <% if devise_mapping.rememberable? -%>
                          <%= f.check_box :remember_me %>
                          <%= t('labels.remember_me') %>
                        <% end -%>
                      </label>
                    </div>
                  </div>

                  <div style="margin-top:10px" class="form-group">
                      <!-- Button -->

                      <div class="col-sm-12 controls">
                        <%= f.submit "#{t('labels.enter')}", class:"btn btn-success" %>
                      </div>
                  </div>


                  <div class="form-group">
                      <div class="col-md-12 control">
                          <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                              <%= t('labels.dont_have_an_account') %>
                          <%= link_to "#{t('labels.sign_up_here')}", new_member_registration_path %>
                          </div>
                      </div>
                  </div>
                <% end %>
          </div>
    </div>
</div>

<% flash.each do |key, value| %>
    <%= javascript_tag "$.notify( {message: '#{value}'}, { type: 'danger', offset: 70});" %>
<% end %>
