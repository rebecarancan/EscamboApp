<h1 class="page-header"><%= t('profile_menu.my_data') %></h1>

<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads' %>
<% end %>

<h3><%= "#{t('messages.editing', model: @profile_member.model_name.human)}" %></h3>

  <% if @profile_member.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>

      <ul>
          <% @profile_member.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
      </ul>

      </div>
  <% end %>

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>

  <div class="row">
    <div class="form-group col-xs-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control", placeholder:"#{t('placeholder.name')}" %>
    </div>
  </div>

 <div class="row">
    <div class="form-group col-xs-6">
      <%= f.label :second_name %>
      <%= f.text_field :second_name, class: "form-control", placeholder:"#{t('placeholder.second_name')}" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-3">
      <%= f.label :birth_date %>
      <%= f.text_field :birth_date, class: "form-control datepicker", value: (l(@profile_member.birth_date) unless @profile_member.birth_date.blank?) %>
    </div>
  </div>

    <%= f.submit "#{t('buttons.save')}", class: "btn btn-default"  %>
<% end %>
