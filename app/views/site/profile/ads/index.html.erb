<h1>Listando Anúncios</h1>
<br>

<table class="table table-hover">
 <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Imagem</th>
      <th scope="col">Título</th>
      <th scope="col">Categoria</th>
      <th scope="col">Preço</th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <th scope="row"><%= ad.id %></th>
        <td><%= image_tag ad.picture(:thumb) %></td>
        <td><%= ad.title %></td>
        <td><%= ad.category.description %></td>
        <td><%= humanized_money_with_symbol ad.price %></td>
        <td>
          <%= link_to edit_site_profile_ad_path(ad) do %>
            <span style="color: black" class="glyphicon glyphicon-pencil" aria-hidden="true" ></span>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
